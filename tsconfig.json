{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,   
    "noImplicitReturns": true,                
    "downlevelIteration": true,
    "noUnusedLocals": true,    
    "strict": true,    
  },
  "include": [
    "client/**/*"
  ],  
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public",    
  ],
  "compileOnSave": false
}
