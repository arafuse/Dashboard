{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist/",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",    
    "forceConsistentCasingInFileNames": true,    
    "noImplicitReturns": true,                
    "noUnusedLocals": true,
    "strict": true,    
  },
  "include": [
    "src/**/*"
  ],  
  "exclude": [
    "node_modules/",
    "build/",    
    "webpack-*.js"
  ]
}